

<div class='well'>
  <%= form_for @user do |f| %>

  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class='control-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Register", class: "btn btn-primary" %>
  <% end %>
</div>