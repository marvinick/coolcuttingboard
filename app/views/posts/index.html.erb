<body>
  <div class="post">
    <h1>News</h1>

      <div class="col-md-3">
        <% @posts.each do |post| %>
          <h3><%= link_to post.title, post %></h3>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>

      </div>
    </div>
  </div>
</body>
<br/>
<footer class="footer">
  <div class="container" >
    <div class="row">
      <div class="col-md-12">
        <center><%= link_to 'New Post', new_post_path %></center>
      </div>
    </div>
  </div>
</footer>
