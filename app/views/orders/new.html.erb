
<div class="order-page">
  <%= form_for @order, :html => {:multipart => true} do |f| %>
    <div class='container'>
      <div class="row">
        <div class="col-md-3">
          <h3><span><%= f.label :product %></span></h3>
          <%= f.text_field :product, class: "form-register" %>
        </div>
        <div class='col-md-2'>
          <h3><span><%= f.label :quantity %></span></h3>
          <%= f.text_field :quantity, class: "form-register" %>
        </div>
        <div class='col-md-2'>
          <h3><span><%= f.label :unit %></span></h3>
          <%= f.text_field :unit, class: "form-register" %>
        </div>
        <div class='col-md-2'>
          <h3><span><%= f.label :vendor %></span></h3>
          <%= f.text_field :vendor, class: "form-register" %>
        </div>
        <div class='col-md-2'>
          <h3><span><%= f.label :email %></span></h3>
          <%= f.text_field :email, class: "form-register" %>
        </div>
      </div>
    </div>
    <br/>
    <center><%= f.submit @order.new_record? ? "Submit" : "Update", class: 'btn btn-success btn-lg' %></center>
  <% end %>
</div>