<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
  <%= render @cart %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="sidebar">
        <div id="cart">
          <%= render @cart %>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="listing">
        <h2>Choose the products you want to order below:</h2>
        <% cache ["listing", Product.latest] do %>
        <% @products.each do |product| %>
        <% cache ["listing", product] do %>
        <h4><%= product.title %></h4>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= product.price %></span>
          <%= button_to 'Add', line_items_path(product_id: product), remote: true  %>
        </div>
        <% end %>
        <% end %>

      </div>
      <% end %>
    </div>

  </div>
</div>
